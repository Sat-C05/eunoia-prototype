generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Assessment {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())

  userId         String?
  assessmentType String   @default("PHQ9")
  totalScore     Int
  severity       String
  rawAnswers     String
}

model Booking {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())

  studentName  String
  studentEmail String?
  reason       String?

  slot        DateTime
  status      String @default("PENDING")

  userId      String?
}

model MoodLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String?
  mood      Int
  note      String?
}
